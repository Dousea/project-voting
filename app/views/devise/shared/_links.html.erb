<%- if controller_name != 'sessions' %>
  <div class="mb-1">
    <%= link_to "Masuk", new_session_path(resource_name), class: 'small link-secondary text-decoration-none' %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-1">
    <%= link_to "Daftar", new_registration_path(resource_name), class: 'small link-secondary text-decoration-none' %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mb-1">
    <%= link_to "Lupa password Anda?", new_password_path(resource_name), class: 'small link-secondary text-decoration-none' %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mb-1">
    <%= link_to "Tidak menerima instruksi konfirmasi?", new_confirmation_path(resource_name), class: 'small link-secondary text-decoration-none' %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mb-1">
    <%= link_to "Tidak menerima instruksi pembukaan kunci?", new_unlock_path(resource_name), class: 'small link-secondary text-decoration-none' %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="mb-1">
      <%= link_to "Masuk dengan #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: 'small link-secondary text-decoration-none' %>
    </div>
  <% end %>
<% end %>
