<div class="d-flex h-100 align-items-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card w-100 p-3 m-auto', style: 'max-width:30rem' }) do |f| %>
    <h1 class="mb-3 fs-3 fw-normal">Harap masuk</h1>

    <%
      unless flash.empty?
        { notice: 'info', alert: 'warning' }.each do |type, css_class|
          if flash[type]
    %>
    <div class="alert alert-<%= css_class %> alert-dismissible" role="alert">
      <%= flash[type] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <%
          end
        end
      end

      # Clear flash so it does not show up as toasts
      flash.clear
    %>

    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.submit 'Masuk', class: 'btn btn-primary' %>
    </div>

    <div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
