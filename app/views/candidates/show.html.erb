<div class="d-flex justify-content-center align-items-center w-100 h-100">
  <section class="card w-100 p-3 mb-3 align-items-center" style="max-width:50rem">
    <h1 class="mb-3 fs-5 fw-bold">Kandidat #<%= @candidate.number %></h1>
    
    <div class="w-100">
      <div class="mb-3 d-flex justify-content-center w-100">
        <%= image_tag 'candidate-placeholder.jpg', class: 'img-fluid img-thumbnail' %>
      </div>
      <% %i[name sidn vision mission].each do |attribute| %>
        <% value = @candidate.send(attribute) %>
        <% next if value.nil? %>
        <div class="row">
          <div class="col-3 col-md-2 border-end border-dark text-end">
            <%= t("activerecord.attributes.user.#{attribute.to_s}") %>
          </div>
          <div class="col-9 col-md-10 text-muted">
            <div class="d-flex align-items-center">
              <%= value %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="mt-3 d-flex justify-content-center w-100">
        <%= button_tag 'Kembali', onclick: 'javascript:history.back()', class: 'btn btn-primary' %>
      </div>
    </div>
  </section>
</div>
